<%- include('admin') %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>All Event Registrations</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f7f9fc;
      margin: 0;
      padding: 2rem;
    }

    h2 {
      text-align: center;
      color: #2c3e50;
    }

    .container {
      max-width: 1000px;
      margin: 0 auto;
      background: white;
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 1.5rem;
    }

    th, td {
      text-align: left;
      padding: 12px 15px;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #3498db;
      color: white;
    }

    tr:hover {
      background-color: #f1f1f1;
    }

    .empty-message {
      text-align: center;
      font-size: 1.2rem;
      color: #888;
      margin-top: 2rem;
    }
  </style>
</head>
<body>

  <div class="container">
    <h2>All Event Registrations</h2>

    <% if (registrations.length === 0) { %>
      <p class="empty-message">No students have registered yet.</p>
    <% } else { %>
      <table>
        <thead>
          <tr>
            <th>Student</th>
            <th>Event</th>
            <th>Description</th>
            <th>Location</th>
            <th>Registration Date</th>
          </tr>
        </thead>
        <tbody>
          <% registrations.forEach(r => { %>
            <tr>
              <td><%= r.studentId.username %></td>
              <td><%= r.eventId.name %></td>
              <td><%= r.eventId.description %></td>
              <td><%= r.eventId.location %></td>
              <td><%= new Date(r.registrationDate).toLocaleString() %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>
  </div>

</body>
</html>
